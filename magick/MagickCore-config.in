#!/bin/sh
#
# Configure options script for re-calling MagickCore compilation options
# required to use the MagickCore library.
#

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@/ImageMagick

usage="\
Usage: MagickCore-config [--cflags] [--cppflags] [--exec-prefix] [--ldflags] [--libs] [--prefix] [--version]"

if test $# -eq 0; then
      echo -n "${usage}" 1>&2
      echo -n "Example: gcc \`MagickCore-config --cflags --cppflags\` -o core core.c \`Magick-config --ldflags --libs\`" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
    -*=*) optarg=`echo -n "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac
  case $1 in
    --prefix=*)
      prefix=$optarg
      ;;
    --prefix)
      echo -n $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      ;;
    --exec-prefix)
      echo -n $exec_prefix
      ;;
    --version)
      echo -n '@PACKAGE_VERSION@ Q@QUANTUM_DEPTH@ @MAGICK_HDRI@'
      ;;
    --cflags)
      echo -n "-I${includedir} @MAGICK_PCFLAGS@"
      ;;
    --cxxflags)
      echo -n '@MAGICK_CXXFLAGS@'
      ;;
    --cppflags)
      echo -n '@MAGICK_CPPFLAGS@'
      ;;
    --ldflags)
      echo -n '@MAGICK_LDFLAGS@'
      ;;
    --libs)
      echo -n "-L${libdir} @MAGICK_LIBS@"
      ;;
    --coder-path)
      echo -n "@CODER_PATH@"
      ;;
    --filter-path)
      echo -n "@FILTER_PATH@"
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

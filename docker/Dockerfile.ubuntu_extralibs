ARG VERSION=24.04
FROM ubuntu:${VERSION}

ENV DEBIAN_FRONTEND=noninteractive

RUN apt update
RUN apt install -y rsync cmake g++
RUN apt install -y librsvg2-dev ghostscript
RUN mkdir -p /build && chmod 777 /build
COPY build_image_magick.sh /
ENV EXPECTED_DELEGATES="rsvg"
ENTRYPOINT [ "/build_image_magick.sh" ]
